@model IEnumerable<Comp1640.Models.Idea>

<p>
    <a asp-action="Create">Create New</a>
</p>
<partial name="_StatusMessenger" model="@ViewData["message"]" />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FilePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Topic.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.FullName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FilePath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Topic.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FullName)
            </td>
            <td>|
                    <button type="button" class="btn btn-outline-primary"><a asp-action="Update" asp-route-id="@item.Id">Edit</a> </button>
                    <button id="btnDelete" class="btn btn-danger" data-toggle="modal"
                        data-target="#DeleteModal-@item.Id" style='margin-left:5px'>
                        <i class='fa fa-trash'></i> Delete
                    </button>
                    @using (Html.BeginForm("DeleteConfirmed", "Ideas", new { id = item.Id }, FormMethod.Post, null, null))
                    {
                        @Html.AntiForgeryToken()
                        <div class="modal" tabindex="-1" role="dialog" id="DeleteModal-@item.Id">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Delete Confirmation</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Are you sure you want to delete this record ?</p>
                                        <p>@Html.DisplayFor(modelItem => item.Content)</p>
                                    </div>

                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
            </td>
        </tr>
}
    </tbody>
</table>


