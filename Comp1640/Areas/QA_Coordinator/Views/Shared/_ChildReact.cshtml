@using Comp1640.ViewModels;
@using Comp1640.Utility;
@model React;


<form asp-action="Like" asp-controller="Ideas" method="post">
    
    
    @if (Model.Like == 1)
    {
        <div class="dropdown-item rounded d-flex justify-content-center align-items-center pointer text-muted p-1">

            <i class="fas fa-thumbs-up me-3 text-primary" style="color:@ViewBag.Like"></i>
            &nbsp
            <p class="m-0">Like</p>
        </div>
    } else
    {
    <div class="dropdown-item rounded d-flex justify-content-center align-items-center pointer text-muted p-1">

                <i class="fas fa-thumbs-up me-3 text-primary" style="color:@ViewBag.Like"></i>
                &nbsp
                <p class="m-0">Like</p>
            </div>
    }

</form>
