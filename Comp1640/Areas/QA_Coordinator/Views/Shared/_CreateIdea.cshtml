@model Idea
@using Comp1640.Utility

<div class="modal fade"
	 id="createModalIdea"
	 tabindex="-1"
	 aria-labelledby="createModalLabel"
	 aria-hidden="true"
	 data-bs-backdrop="false">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<form asp-area="QA_Coordinator" asp-controller="Ideas" enctype="multipart/form-data" asp-action="Create" method="post">
				<!-- head -->
				<div class="modal-header align-items-center">
					<h5 class="text-dark text-center w-100 m-0"
						id="exampleModalLabel">
						Create Post
					</h5>
					<button type="button"
							class="btn-close"
							data-bs-dismiss="modal"
							aria-label="Close"></button>
				</div>
				<!-- body -->
				<div class="modal-body">
					<div class="my-1 p-1">
						<div class="d-flex flex-column">
							<!-- name -->
							<div class="d-flex align-items-center">
								<div class="p-2">
									<img src="https://source.unsplash.com/collection/happy-people"
										 alt="from fb"
										 class="rounded-circle"
										 style="
                                  width: 38px;
                                  height: 38px;
                                  object-fit: cover;
                                " />
								</div>
								<div>
									<p class="m-0 fw-bold">John</p>
								</div>
							</div>
							<!-- text -->
							<partial name="_StatusMessenger" model="@ViewData["message"]" />
							<div>
								<div class="form-floating">
									<textarea class="form-control" asp-for="Content"
											  placeholder="Content for Idea"
											  style="height: 100px"></textarea>
								</div>
								<div class="form-group">
									<label class="control-label">File</label>
									<input type="file" name="file" class="form-control" />
									<span asp-validation-for="FilePath" class="text-danger"></span>
								</div>
								<div class="form-group">
									<label asp-for="Category" class="control-label"></label>
									<select asp-for="CategoryID" class="form-control" asp-items="ViewBag.CategoryID">
										<option value="">-- Select Category --</option>
									</select>
								</div>
								<div class="form-group">
									<label asp-for="Topic" class="control-label"></label>
									<select asp-for="TopicID" class="form-control" asp-items="ViewBag.TopicID">
										<option value="">-- Select Topic --</option>
									</select>
								</div>
								<div class="form-group">

									
										<input type="checkbox" id="myCheck" onclick="myFuntion()" />
										<label for="myCheck" class="control-label">I agree to the terms </label>
							
								</div>
							</div>

							<!-- emoji  -->
						</div>
					</div>

					<!-- end -->

				</div>
				<!-- footer -->
				<div class="modal-footer">
					<input id="buttonSubmit" type="submit" value="Create" class="btn btn-primary" style="width:100%;" disabled />
					<p id="check" style="color: red;display:none;">Please agree to the terms!</p>
				


				</div>
			</form>
		</div>
	</div>
</div>
<script>

	function myFuntion() {
		var checkBox = document.getElementById("myCheck");
		var buttonSubmit = document.getElementById("buttonSubmit")
		if (checkBox.checked == true)
			buttonSubmit.removeAttribute("disabled");
		else{
			buttonSubmit.disabled = true;
		}
	}
</script>
